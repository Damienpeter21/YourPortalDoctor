@{
    Layout = "_LayoutDoctor";
}
@model YourPortalDoctor.Areas.Doctor.Models.PatientDetailsModels;
<html>
<head>
<style>
    .error {
        color: red !important;
        margin-left: 5px;
    }
</style>
    </head>
<body>

    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h4 class="page-title">Add Patient Details</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <form asp-action="SavePatientDetails" method="post" id="frmpatientdetails">
                        <input type="hidden" asp-for="Patient_ID" name="Patient_ID" />
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Patient Roll No <span class="text-danger">*</span></label>
                                    <input class="form-control" id="txtRollNo" asp-for="Patient_Roll_No" name="Patient_Roll_No" type="text" maxlength="15" placeholder="Patient Roll No" required />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>First Name <span class="text-danger">*</span></label>
                                    <input class="form-control" asp-for="FirstName" name="FirstName" type="text" maxlength="15" placeholder="First Name" required />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Last Name <span class="text-danger">*</span></label>
                                    <input class="form-control" asp-for="LastName" name="LastName" type="text" maxlength="15" placeholder="Last Name" required />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Email <span class="text-danger">*</span></label>
                                    <input class="form-control" asp-for="Email" name="Email" type="email" maxlength="50" placeholder="Email ID" required />
                                </div>
                            </div>

                            @*<div class="col-sm-6">
                                <div class="form-group">
                                    <label>In<span class="text-danger">*</span></label>
                                    <div>
                                        <input type="date" asp-for="PTIN" name="In" class="form-control datepicker" placeholder="DateofBirth" required />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Out<span class="text-danger">*</span></label>
                                    <div>
                                        <input type="date" asp-for="PTOUT" name="Out" class="form-control datepicker" placeholder="DateofBirth" required />
                                    </div>
                                </div>
                            </div>*@

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Date of Birth<span class="text-danger">*</span></label>
                                    <div>
                                        <input type="date" asp-for="DateofBirth" name="DateofBirth" class="form-control datepicker" placeholder="DateofBirth" required />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 ">

                                <label for="validationTooltip04">BloodGroup</label>
                                <span class="text-danger">*</span>
                                <select class="form-control select" id="validationTooltip04" asp-for="BloodGroup" placeholder=" Blood Group" required>
                                    <option value="" hidden>-Select-</option>
                                    <option>A RhD positive (A+)</option>
                                    <option>A RhD negative (A-)</option>
                                    <option>B RhD positive (B+)</option>
                                    <option>B RhD negative (B-)</option>
                                    <option>O RhD positive (O+)</option>
                                    <option>O RhD negative (O-)</option>
                                    <option>AB RhD positive (AB+)</option>
                                    <option>AB RhD negative (AB-)</option>
                                </select>
                            </div>
                            <div class=" col-sm-6 form-group">


                                <label class="display-block">Gender<span class="text-danger">*</span></label>

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" name="Gender" id="maleGender"
                                           value="Male" />
                                    <label class="form-check-label" for="maleGender">Male</label>
                                </div>

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" name="Gender" id="femaleGender"
                                           value="Female" />
                                    <label class="form-check-label" for="femaleGender">Female</label>
                                </div>

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" name="Gender" id="otherGender"
                                           value="Others" />
                                    <label class="form-check-label" for="otherGender">Others</label>
                                </div>


                            </div>


                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Address<span class="text-danger">*</span></label>
                                    <input type="text" asp-for="Address" name="Address" class="form-control " placeholder="Enter a Address" required />
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Phone<span class="text-danger">*</span> </label>
                                    <input class="form-control" asp-for="MobileNumber" name="MobileNumber" maxlength="10" type="text" placeholder="Mobile Number" required />
                                </div>
                            </div>

                            <div class=" col-sm-6 form-group">
                                <label class="display-block">Status<span class="text-danger">*</span></label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Status" asp-for="Status" id="patient_active" value="0" checked>
                                    <label class="form-check-label" for="patient_active">
                                        Active
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Status" asp-for="Status" id="patient_inactive" value="1">
                                    <label class="form-check-label" for="patient_inactive">
                                        Inactive
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary submit-btn">Create Patient</button>
                                <button type="button" value="Cancel" class="btn btn-primary submit-btn" onclick="@("window.location.href='" + @Url.Action("ViewPatientDetails", "Doctor") + "'");">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#frmpatientdetails").validate({
                rules: {
                    "txtRollNo": {
                        required: true
                    },
                    "FirstName": {
                        required: true
                    },
                    "LastName": {
                        required: true
                    },
                    "Email": {
                        required: true
                    },
                    "DateofBirth": {
                        required: true
                    },
                    "BloodGroup": {
                        required: true
                    },
                    "Gender": {
                        required: true
                    },
                    "Address": {
                        required: true
                    },
                    "BloodGroup": {
                        required: true
                    },
                    "MobileNumber": {
                        required: true
                    },
                    "Status": {
                        required: true
                    }
                },
                messages: {
                    "txtRollNo": {
                        required: "Please, Enter a Patient Roll No"
                    },
                    "FirstName": {
                        required: "Please, Enter a FirstName"
                    },
                    "LastName": {
                        required: "Please, Enter a LastName"
                    },
                    "Email": {
                        required: "Please, Enter a Email"
                    },
                    "DateofBirth": {
                        required: "Please, Select a DateofBirth"
                    },
                    "BloodGroup": {
                        required: "Please, Select a BloodGroup"
                    },
                    "Gender": {
                        required: "Please, Select a Gender"
                    },
                    "Address": {
                        required: "Please, Enter a Address"
                    },
                    "MobileNumber": {
                        required: "Please, Enter a MobileNumber"
                    },
                    "Status": {
                        required: "Please, Select a Status"
                    }
                }
            });
        });
    </script>

    <script src="~/YRDMain/js/jquery.validate.js"></script>
    <script src="~/YRDMain/js/jquery.validate.min.js"></script>

</body>
</html>