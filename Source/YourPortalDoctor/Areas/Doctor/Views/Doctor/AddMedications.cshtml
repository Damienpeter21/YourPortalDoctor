@{
    Layout = "_LayoutDoctor";
}
@model YourPortalDoctor.Areas.Doctor.Models.PatientDetailsModels;
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">Add Medicines</h4>
                <span Class="text-danger">(Make Sure Enter Correct Medicines....)</span>
                <br /> <br />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <form asp-action="SaveMedicinesDetails">
                    <div class="row">
                        <div class="col-sm-6">
                        </div>
                        <div class="col-sm-12">
                            <div class="show-fixed-amount">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label>Symptoms<span class="text-danger">*</span> </label>
                                            <input class="form-control" type="text" asp-for="SymptomName" name="SymptomName"required>
                                        </div>
                                    </div>
                                    <br/>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label>Medicine<span class="text-danger">*</span></label>
                                            <input class="form-control" type="text" asp-for="TabletSyrup" name="TabletSyrup"required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </div>
                    
                        <div class="m-t-20 text-center">
                            <button class="btn btn-primary submit-btn">Save</button>
                            <button type="button" value="Cancel" class="btn btn-primary submit-btn" onclick="@("window.location.href='" + @Url.Action("ViewMedications", "Doctor") + "'");">Cancel</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>